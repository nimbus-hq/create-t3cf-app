{
  "name": "@ct3cfa/root",
  "version": "0.0.0",
  "description": "Quickest way to develop T3 styled web app on Cloudflare",
  "author": "Nimbus HQ <nimbus.hq.cloud@gmail.com>",
  "maintainers": [
    "Aiden Cline",
    "David Herring"
  ],
  "type": "module",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nimbus-hq/create-t3cf-app.git"
  },
  "keywords": [
    "create-t3cf-app",
    "cloudflare",
    "next.js",
    "t3-stack",
    "tailwind",
    "tRPC",
    "typescript"
  ],
  "engines": {
    "node": ">=18.17.0"
  },
  "packageManager": "bun@1.1.29",
  "scripts": {
    "typecheck": "turbo typecheck",
    "build:cli": "turbo --filter=create-t3-app build",
    "build:www": "turbo --filter=www build",
    "build": "turbo build",
    "start:cli": "turbo --filter=create-t3-app start",
    "start:www": "turbo --filter=www start",
    "dev:cli": "turbo --filter=create-t3-app dev",
    "dev:www": "turbo --filter=www dev",
    "clean": "turbo clean && rm -rf node_modules",
    "lint": "turbo lint && manypkg check",
    "lint:fix": "turbo lint:fix && manypkg fix",
    "format": "turbo format && prettier --write '*.{cjs,json}' --ignore-unknown --no-error-on-unmatched-pattern",
    "format:check": "turbo format:check && prettier --check '*.{cjs,json}' --ignore-unknown --no-error-on-unmatched-pattern",
    "check": "turbo lint typecheck format:check && manypkg check",
    "release": "changeset version",
    "pub:beta": "cd cli && bun pub:beta",
    "pub:release": "cd cli && bun pub:release"
  },
  "dependencies": {
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.27.3",
    "@manypkg/cli": "^0.20.0",
    "@total-typescript/ts-reset": "^0.3.7",
    "@types/eslint": "^8.56.10",
    "@types/node": "^20.14.10",
    "@typescript-eslint/eslint-plugin": "^8.1.0",
    "@typescript-eslint/parser": "^8.1.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-isaacscript": "^2.6.7",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.2",
    "prettier": "^3.3.2",
    "turbo": "1.13.3-canary.3",
    "typescript": "^5.5.3"
  },
  "resolutions": {
    "@typescript-eslint/eslint-plugin": "8.1.0",
    "@typescript-eslint/parser": "8.1.0"
  }
}
