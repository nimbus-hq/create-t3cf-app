---
import { Image } from "astro:assets";
import Search from "./Search";

const { pathname } = Astro.url;
const isLanding = pathname === "/" || !!Astro.props.isNotFound;
---

<header
  class="flex justify-between items-center px-4 py-4 justify-self-center w-full mx-auto max-w-[1280px]"
>
  <div class="flex justify-between items-center gap-10">
    <a href="/" class="">
      <Image
        src="/img/t3-light.svg"
        alt="t3cf logo"
        width={50}
        height={50}
        format="webp"
        class=""
      />
    </a>
    <a href="/docs" class="text-white ml-3 max-sm:invisible">Docs</a>
  </div>
  <div class="hidden w-full max-w-xs rounded-lg md:block">
    <Search isLanding={isLanding} client:load />
  </div>
</header>
